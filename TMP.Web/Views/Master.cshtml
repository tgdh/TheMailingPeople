@using TMP.Core.ExtensionMethods
@inherits UmbracoViewPage<IPublishedContent>
@{
    Layout = null;

    var pageScope = "s-" + Model.DocumentTypeAlias.ConvertToId();
}

<!doctype html>
<html lang="en" class="no-enhance @pageScope">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, minimal-ui">

        @Html.Partial("~/Views/Partials/Components/SEO.cshtml")
        @RenderSection("OpenGraph", false)

        <!--[if gt IE 8]><!-->
            <link rel="stylesheet" href="/assets/css/style.css">
        <!--<![endif]-->

        <!--[if lt IE 9]>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv-printshiv.min.js"></script>
            <link rel="stylesheet" href="/assets/css/ie.css">
        <![endif]-->

        <script src="/assets/js/head.js"></script>

        @RenderSection("HeadScripts", false)
        @Html.Partial("~/Views/Partials/Components/Fonts.cshtml")
        @Html.Partial("~/Views/Partials/Components/Favicons.cshtml")
    </head>
    <body class="o-page">
        @Html.Partial("~/Views/Partials/Page/Header.cshtml")
		<div class="c-page__wrapper">
			@RenderBody()
			@Html.Partial("~/Views/Partials/Page/Newsletter.cshtml")
			@Html.Partial("~/Views/Partials/Page/Accreditations.cshtml")
		</div>
		@Html.Partial("~/Views/Partials/Page/Footer.cshtml")

        <!--[if lt IE 9]>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <![endif]-->

        <!--[if gte IE 9]><!-->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.15.0/jquery.validate.js"></script>
            <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.1/jquery.validate.unobtrusive.min.js"></script>
            <script src="/assets/js/main.js"></script>
        <!--<![endif]-->

        @Html.Partial("~/Views/Partials/Components/Analytics.cshtml")
        @RenderSection("Scripts", false)

        <!--[if (gte IE 6)&(lte IE 8)]>
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/selectivizr/1.0.2/selectivizr-min.js"></script>
        <![endif]-->
    </body>
</html>
